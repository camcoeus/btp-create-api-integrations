{
    "requires": {
        "uaa": {
            "kind": "xsuaa"
        },
        "apim": {
            "kind": "destination"
        },
        "developers": {
            "kind": "odata",
            "credentials": {
                "destination": "apim",
                "path": "/apiportal/api/1.0/Management.svc",
                "forwardAuthToken": true,
                "requestTimeout": 1000000
            },
            "destinationOptions": {
                "selectionStrategy": "alwaysProvider"
            }
        },
        "monetize": {
            "kind": "rest",
            "credentials": {
                "destination": "apim",
                "path": "/api/1.0/apimgmt/monetize",
                "requestTimeout": 1000000
            }
        }
    }
}